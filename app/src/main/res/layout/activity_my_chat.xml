<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/trueBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:gravity="right">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="245dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/opponent_chat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/txt_my_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Скорее бы!"
                    android:textColor="@color/white"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_gravity="right|bottom">

                    <TextView
                        android:id="@+id/txt_my_chat_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Иван Иванов"
                        android:textColor="#FFBFAB"
                        android:textStyle="normal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFBFAB"
                        android:textStyle="normal"
                        android:text=" • " />

                    <TextView
                        android:id="@+id/txt_my_chat_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFBFAB"
                        android:textStyle="normal"
                        android:text="18:30" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/img_my"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ivan" />

    </LinearLayout>
</LinearLayout>